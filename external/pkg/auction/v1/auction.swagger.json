{
  "swagger": "2.0",
  "info": {
    "title": "Auction",
    "description": "Auction a.k.a. marketplace where everyone can place Lots to bid",
    "version": "1.0.0"
  },
  "tags": [
    {
      "name": "Auction"
    }
  ],
  "host": "localhost:7000",
  "schemes": [
    "http"
  ],
