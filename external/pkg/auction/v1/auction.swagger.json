          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "lotId",
            "in": "path",
            "required": true,
            "type": "string",
            "format": "uint64"
          }
        ],
        "tags": [
          "Auction"
        ]
      }
    },
    "/upbalance": {
      "post": {
        "summary": "Upgrade user's balance",
        "description": "Accepts user's id and amount which will be added to the balance",
