            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/UpBalanceRequest"
            }
          }
        ],
        "tags": [
          "Auction"
        ],
        "security": [
          {
            "api-token": []
          }
        ]
      }
