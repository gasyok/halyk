            "$ref": "#/definitions/Lot"
          }
        }
      }
    },
    "Lot": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uint64"
        },
        "sellerId": {
          "type": "string",
          "format": "uint64"
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "startPrice": {
          "type": "number",
          "format": "float"
        },
        "auctionId": {
          "type": "string",
          "format": "uint64"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      }
