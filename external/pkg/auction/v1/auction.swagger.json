        "userId": {
          "type": "string",
          "format": "uint64"
        },
        "auctionId": {
          "type": "string",
          "format": "uint64"
        },
        "amount": {
          "type": "number",
          "format": "float"
        }
      }
    },
    "CreateBidResponse": {
      "type": "object"
    },
    "CreateLotRequest": {
      "type": "object",
      "properties": {
        "sellerId": {
          "type": "string",
          "format": "uint64"
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "startPrice": {
          "type": "number",
          "format": "float"
        }
      },
      "required": [
        "sellerId",
        "title",
        "startPrice"
      ]
