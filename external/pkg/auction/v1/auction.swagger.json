          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/ProcessTransactionsRequest"
            }
          }
        ],
        "tags": [
          "Auction"
        ],
        "security": [
          {
            "api-token": []
          }
        ]
      }
    },
